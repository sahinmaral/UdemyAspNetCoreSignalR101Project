@{
    ViewBag.Title = "Yeni Bildirim";
    Layout = "_AdminLayout";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Yeni Bidirim Oluştur</h4>
        <div class="row">
            <div class="col-md">
                <form asp-action="Create" asp-controller="Notification" asp-area="Admin" method="post">
                    <div class="card">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="title">Başlık</label>
                                <input type="text" class="form-control" id="title" name="title" placeholder="Başlık giriniz">
                            </div>
                            <div class="form-group">
                                <label for="description">Açıklama</label>
                                <textarea class="form-control" rows="5" id="description" name="description" placeholder="Açıklama giriniz"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button type="submit" class="btn btn-success">Kaydet</button>
                            <button type="reset" class="btn btn-danger">İptal et</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>