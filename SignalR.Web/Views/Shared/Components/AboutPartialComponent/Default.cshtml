@model ResultAboutViewModel

<section class="about_section layout_padding">
    <div class="container">
        <div class="row">
            <div class="col-md-6 ">
                <div class="img-box">
                    <img src="@Model.ImageUrl" alt="">
                </div>
            </div>
            <div class="col-md-6">
                <div class="detail-box">
                    <div class="heading_container">
                        <h2>
                            @Model.Title
                        </h2>
                    </div>
                    <p>
                        @Model.Description
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>