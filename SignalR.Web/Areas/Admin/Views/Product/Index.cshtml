@model List<ResultProductWithCategoryViewModel>

@{
    ViewBag.Title = "Ürünler";
    Layout = "_AdminLayout";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ürün işlemleri</h4>
        <div class="row">
            <div class="col-md">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">
                            Ürün listesi
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            <p>Ürün ile ilgili işlemleri aşağıda gerçekleştirebilirsiniz.</p>
                            <a href="/AdminProduct/Create" class="btn btn-primary">Yeni ürün girişi</a>
                        </div>
                        @if (Model.Count == 0)
                        {
                            <div class="alert alert-info">
                                Herhangi bir ürün yok.
                            </div>
                        }
                        else
                        {
                            <table class="table table-striped mt-3">
                                <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ad</th>
                                    <th scope="col">Fiyat</th>
                                    <th scope="col">Kategori Adı</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">İşlemler</th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var product in Model)
                                {
                                    <tr>
                                        <td>@product.Id</td>
                                        <td>@product.Name</td>
                                        <td>@product.Price</td>
                                        <td>@product.CategoryName</td>
                                        <td>
                                            @if (product.Status)
                                            {
                                                <p class="badge badge-success">Aktif</p>
                                            }
                                            else
                                            {
                                                <p class="badge badge-danger">Deaktif</p>
                                            }
                                        </td>
                                        <td>
                                            <a class="btn btn-outline-success" href="/Admin/Product/Update/@product.Id">Güncelle</a>
                                            <a class="btn btn-outline-danger" href="/Admin/Product/Delete/@product.Id">Sil</a>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>