@{
    Layout = "_AdminLayout";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">QR Kod oluştur</h4>
        <div class="row">
            <div class="col-md">
                <form asp-action="Index" asp-controller="QrCode" asp-area="Admin" method="post">
                    <div class="card">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="value">Değer</label>
                                <input type="text" class="form-control" id="value" name="value" placeholder="Değeri giriniz">
                            </div>
                        </div>
                        <div class="card-action">
                            <button type="submit" class="btn btn-success">Kaydet</button>
                            <button type="reset" class="btn btn-danger">İptal et</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        @if (ViewBag.QrCodeImage is not null)
        {
            <h4 class="page-title">Oluşan QR Kod</h4>
            <div class="row">
                <div class="col">
                    <img alt="Embedded QR Code" style='width:250px; height:250px'
                         src="data:image/@ViewBag.ImageType;base64,@Html.Raw(ViewBag.QrCodeImage)"/>
                </div>
            </div>
        }
    </div>
</div>