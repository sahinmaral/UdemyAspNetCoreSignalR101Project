@{
    ViewBag.Title = "Yeni Rezervasyon";
    Layout = "_AdminLayout";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Yeni Rezervasyon Oluştur</h4>
        <div class="row">
            <div class="col-md">
                <form asp-action="Create" asp-controller="Reservation" asp-area="Admin" method="post">
                    <div class="card">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name">Ad soyad</label>
                                <input type="text" class="form-control" id="name" name="name" placeholder="Ad soyad giriniz">
                            </div>
                            <div class="form-group">
                                <label for="phoneNumber">Telefon numarası</label>
                                <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber" placeholder="Telefon numarası giriniz">
                            </div>
                            <div class="form-group">
                                <label for="email">E-posta adresi</label>
                                <input type="email" class="form-control" id="email" name="email" placeholder="E-post adresi giriniz">
                            </div>
                            <div class="form-group">
                                <label for="personAmount">Kişi sayısı</label>
                                <input type="number" class="form-control" id="personAmount" name="personAmount" placeholder="Kişi sayısı giriniz">
                            </div>
                            <div class="form-group">
                                <label for="date">Tarih</label>
                                <input type="date" class="form-control" id="date" name="date" placeholder="Tarih giriniz">
                            </div>
                        </div>
                        <div class="card-action">
                            <button type="submit" class="btn btn-success">Kaydet</button>
                            <button type="reset" class="btn btn-danger">İptal et</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>