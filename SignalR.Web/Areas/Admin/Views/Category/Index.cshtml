@model List<ResultCategoryViewModel>

@{
    ViewBag.Title = "Kategoriler";
    Layout = "_AdminLayout";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kategori işlemleri</h4>
        <div class="row">
            <div class="col-md">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">
                            Kategori listesi
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            <p>Kategori ile ilgili işlemleri aşağıda gerçekleştirebilirsiniz.</p>
                            <a href="/Admin/Category/Create" class="btn btn-primary">Yeni kategori girişi</a>
                        </div>
                        @if (Model.Count == 0)
                        {
                            <div class="alert alert-info">
                                Herhangi bir kategori yok.
                            </div>
                        }
                        else
                        {
                            <table class="table table-striped mt-3">
                                <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ad</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">İşlemler</th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var category in Model)
                                {
                                    <tr>
                                        <td>@category.Id</td>
                                        <td>@category.Name</td>
                                        <td>
                                            @if (category.Status)
                                            {
                                                <p class="badge badge-success">Aktif</p>
                                            }
                                            else
                                            {
                                                <p class="badge badge-danger">Deaktif</p>
                                            }
                                        </td>
                                        <td>
                                            <a class="btn btn-outline-success" href="/Admin/Category/Update/@category.Id">Güncelle</a>
                                            <a class="btn btn-outline-danger" href="/Admin/Category/Delete/@category.Id">Sil</a>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>