@model List<ResultSocialMediaAccountViewModel>

@{
    ViewBag.Title = "Sosyal Medya Hesapları";
    Layout = "_AdminLayout";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal medya hesapları işlemleri</h4>
        <div class="row">
            <div class="col-md">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">
                            Sosyal medya hesapları listesi
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            <p>Sosyal medya hesapları ile ilgili işlemleri aşağıda gerçekleştirebilirsiniz.</p>
                            <a href="/AdminSocialMediaAccount/Create" class="btn btn-primary">Yeni sosyal medya hesabı girişi</a>
                        </div>
                        @if (Model.Count == 0)
                        {
                            <div class="alert alert-info">
                                Herhangi bir sosyal medya hesabı yok.
                            </div>
                        }
                        else
                        {
                            <table class="table table-striped mt-3">
                                <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">İkon</th>
                                    <th scope="col">Url</th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var socialMediaAccount in Model)
                                {
                                    <tr>
                                        <td>@socialMediaAccount.Id</td>
                                        <td>@socialMediaAccount.Title</td>
                                        <td>@socialMediaAccount.Icon</td>
                                        <td>@socialMediaAccount.Url</td>
                                        <td>
                                            <a class="btn btn-outline-success" href="/Admin/SocialMediaAccount/Update/@socialMediaAccount.Id">Güncelle</a>
                                            <a class="btn btn-outline-danger" href="/Admin/SocialMediaAccount/Delete/@socialMediaAccount.Id">Sil</a>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        }
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>