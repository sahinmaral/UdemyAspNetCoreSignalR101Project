@model List<ResultHighlightViewModel>

@{
    ViewBag.Title = "Öne Çıkanlar";
    Layout = "_AdminLayout";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Öne Çıkanlar işlemleri</h4>
        <div class="row">
            <div class="col-md">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">
                            Öne Çıkanlar listesi
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            <p>Öne Çıkanlar ile ilgili işlemleri aşağıda gerçekleştirebilirsiniz.</p>
                            <a href="/Admin/Highlight/Create" class="btn btn-primary">Yeni öne çıkanlar girişi</a>
                        </div>
                        @if (Model.Count == 0)
                        {
                            <div class="alert alert-info">
                                Herhangi bir öne çıkanlar yok.
                            </div>
                        }
                        else
                        {
                            <table class="table table-striped mt-3">
                                <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık 1</th>
                                    <th scope="col">Başlık 2</th>
                                    <th scope="col">Başlık 3</th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var highlight in Model)
                                {
                                    <tr>
                                        <td>@highlight.Id</td>
                                        <td>@highlight.Title1</td>
                                        <td>@highlight.Title2</td>
                                        <td>@highlight.Title3</td>
                                        <td>
                                            <a class="btn btn-outline-success" href="/Admin/Highlight/Update/@highlight.Id">Güncelle</a>
                                            <a class="btn btn-outline-danger" href="/Admin/Highlight/Delete/@highlight.Id">Sil</a>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>