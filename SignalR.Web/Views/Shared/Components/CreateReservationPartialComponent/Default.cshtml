@model CreateReservationViewModel

<section class="book_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                Rezervasyon Oluştur
            </h2>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form_container">
                    <form asp-action="Create" asp-controller="Reservation" method="post">
                        <div>
                            <input type="text" class="form-control" placeholder="Adınız ve soyadınız" asp-for="Name"/>
                        </div>
                        <div>
                            <input type="text" class="form-control" placeholder="Telefon numaranız" asp-for="PhoneNumber"/>
                        </div>
                        <div>
                            <input type="email" class="form-control" placeholder="E-posta adresiniz" asp-for="Email"/>
                        </div>
                        <div>
                            <select class="form-control nice-select wide" asp-for="PersonAmount">
                                <option value="" disabled selected>
                                    Kaç kişi olacak?
                                </option>
                                <option value="2">
                                    2
                                </option>
                                <option value="3">
                                    3
                                </option>
                                <option value="4">
                                    4
                                </option>
                                <option value="5">
                                    5
                                </option>
                            </select>
                        </div>
                        <div>
                            <input type="date" class="form-control" placeholder="Rezervasyon tarihi" asp-for="Date">
                        </div>
                        <div class="btn_box">
                            <button type="submit">
                                Oluştur
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <div class="map_container ">
                    <div id="googleMap"></div>
                </div>
            </div>
        </div>
    </div>
</section>