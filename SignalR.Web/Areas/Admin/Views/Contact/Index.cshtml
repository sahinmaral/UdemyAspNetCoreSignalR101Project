@model List<ResultContactViewModel>

@{
    ViewBag.Title = "İletişim";
    Layout = "_AdminLayout";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim işlemleri</h4>
        <div class="row">
            <div class="col-md">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">
                            İletişim listesi
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            <p>İletişim ile ilgili işlemleri aşağıda gerçekleştirebilirsiniz.</p>
                            <a href="/Admin/Contact/Create" class="btn btn-primary">Yeni iletişim girişi</a>
                        </div>
                        @if (Model.Count == 0)
                        {
                            <div class="alert alert-info">
                                Herhangi bir iletişim bilgisi yok.
                            </div>
                        }
                        else
                        {
                            <table class="table table-striped mt-3">
                                <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">E-posta adresi</th>
                                    <th scope="col">Konum Url</th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var about in Model)
                                {
                                    <tr>
                                        <td>@about.Id</td>
                                        <td>@about.Email</td>
                                        <td>@about.LocationUrl</td>
                                        <td>
                                            <a class="btn btn-outline-success" href="/Admin/Contact/Update/@about.Id">Güncelle</a>
                                            <a class="btn btn-outline-danger" href="/Admin/Contact/Delete/@about.Id">Sil</a>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        }
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>